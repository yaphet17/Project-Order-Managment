@model ProjectTask
@{
    ViewData["Title"] = "Create Task";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}
<div class="container" style='padding:30px;'>
    <h1 class="text-info">Create task</h1>
    @if (!string.IsNullOrEmpty(ViewBag.message))
    {
        <h5 class="text-success">@ViewBag.message</h5>
    }
    <form asp-action="Create" asp-controller="Task" method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="@Model.PId">
        <div>
            <div class="form-group col-sm-12">
                <label asp-for="@Model.Name" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    <input class='form-control' asp-for="@Model.Name">
                    <span class='text-danger' asp-validation-for="@Model.Name"></span>
                </div>
            </div>
            <div class="form-group col-sm-12">
                <label asp-for="@Model.Description" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    <input type="textarea" class='form-control' asp-for="@Model.Description">
                    <span class='text-danger' asp-validation-for="@Model.Description"></span>
                </div>
            </div>
            <div class="form-group col-sm-12">
                <label asp-for="@Model.Weight" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    <input type="textarea" class='form-control' asp-for="@Model.Weight">
                    <span class='text-danger' asp-validation-for="@Model.Weight"></span>
                </div>
            </div>
            <input type="hidden" asp-for="@Model.Status" value="Open">
            <div class="form-group col-sm-12">
                <label asp-for="@Model.StartDate" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    <input type="date" class='form-control' asp-for="@Model.StartDate">
                    <span class='text-danger' asp-validation-for="@Model.StartDate"></span>
                </div>
            </div>

            <div class="form-group col-sm-12">
                <label asp-for="@Model.EndDate" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    <input type="date" class='form-control' asp-for="@Model.EndDate">
                    <span class='text-danger' asp-validation-for="@Model.EndDate"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12 btn-submit">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts{
<partial name="_ValidationScriptsPartial" />
}