@model ProjectProduct
@{
    ViewData["Title"] = "Product Detail";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}
<div class='border container' style='padding:30px;'>
    <div class="col-sm-12">
        @if (TempData.ContainsKey("pdMessage"))
        {
            <p class="text-success">@TempData["pdMessage"]</p>
        }
        else if (TempData.ContainsKey("errorPdMessage"))
        {
            <p class="text-danger">@TempData["errorPdMessage"]</p>
        }
    </div>
    <div class="col-12 row">
        <h1 class="text-info flex-grow-1">Product detail</h1>
    </div>
    <div class='form-group row'>
        <div class='col-2'>
            <label asp-for="@Model.ProductName" class="font-weight-bold"></label>
        </div>
        <div class='col-6'>
            <h2 class='form-control'>@Model.ProductName</h2>
        </div>
    </div>
    <div class='form-group row'>
        <div class='col-2'>
            <label asp-for="@Model.PrescPlan" class="font-weight-bold"></label>
        </div>
        <div class='col-6'>
            <h2 class="form-control">@Model.PrescPlan
            </h2>
        </div>
    </div>
    <div class='form-group row'>
        <div class='col-2'>
            <label asp-for="@Model.PrescActual" class="font-weight-bold"></label>
        </div>
        <div class='col-6'>
            <h2 class='form-control'>@Model.PrescActual</h2>
        </div>
    </div>
    <div class='form-group row'>
        <div class='col-2'>
            <label asp-for="@Model.DraftRPlan" class="font-weight-bold"></label>
        </div>
        <div class='col-6'>
            <h2 class='form-control'>@Model.DraftRPlan</h2>
        </div>
    </div>
    <div class='form-group row'>
        <div class='col-2'>
            <label asp-for="@Model.DraftAPlan" class="font-weight-bold"></label>
        </div>
        <div class='col-6'>
            <h2 class='form-control'>@Model.DraftAPlan</h2>
        </div>
    </div>
    <div class='form-group row'>
        <div class='col-2'>
            <label asp-for="@Model.Fqcca" class="font-weight-bold"></label>
        </div>
        <div class='col-6'>
            <h2 class='form-control'>@Model.Fqcca</h2>
        </div>
    </div>
    <div class='form-group row'>
        <div class='col-2'>
            <label asp-for="@Model.ApprovedPlan" class="font-weight-bold"></label>
        </div>
        <div class='col-6'>
            <h2 class='form-control'>@Model.ApprovedPlan</h2>
        </div>
    </div>
    <div class='form-group row'>
        <div class='col-2'>
            <label asp-for="@Model.HandleOPlan" class="font-weight-bold"></label>
        </div>
        <div class='col-6'>
            <h2 class='form-control'>@Model.HandleOPlan</h2>
        </div>
    </div>
    <div class='form-group row'>
        <div class='col-2'>
            <label asp-for="@Model.HandleAPlan" class="font-weight-bold"></label>
        </div>
        <div class='col-6'>
            <h2 class='form-control'>@Model.HandleAPlan</h2>
        </div>
    </div>

    <div class='form-group row'>
        <div class='col-2.5'>
            <a asp-action="Edit" asp-controller="Product" asp-route-id="@Model.Id" class='btn btn-success'>Edit
                Product Detail</a>
        </div>
        <div class='col-3'>
            <a asp-action="Detail" asp-controller="Project" asp-route-pid="@Model.PId" class='btn btn-success'>Back to
                Project</a>
        </div>
    </div>
</div>
