@model ChangeMemberRoleViewModel
@{
    ViewData["Title"] = "Change Member Role";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}
<div class='border container' style='padding:30px;'>
    <form asp-action="ChangeMemberRole" asp-controller="Team" method="POST">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="@Model.TmId">
        <input type="hidden" asp-for="@Model.UId">
        <div class="col-12 row">
            <h1 class="text-info flex-grow-1">Change member role</h1>
        </div>
        <div class='form-group row'>
            <div class='col-2'>
                <label class="font-weight-bold">Name</label>
            </div>
            <div class="col-6">
                <h4>@Model.FirstName @Model.LastName</h4>
            </div>
        </div>
        <div class='form-group row'>
            <div class='col-2'>
                <label asp-for="@Model.TeamRole" class="font-weight-bold"></label>
            </div>
            <div class="col-6">
                @Html.DropDownListFor(e => e.TeamRole, new SelectList(TeamMemberRoleList.memberRole,"Value","Name")
                , new { @class = "form-control form-control-lg" })
                <span asp-validation-for="@Model.TeamRole" class="text-danger"></span>
            </div>
        </div>
        <div class='form-group form-submit row'>
            <div class='col-2.5 btn-submit'>
                <button type="submit" class='btn btn-success'>Update</button>
            </div>
            <div class='col-3'>
                <a asp-action='Detail' asp-controller="Team" asp-route-id="@Model.TmId" class='btn btn-success'>Done</a>
            </div>
        </div>
    </form>

</div>