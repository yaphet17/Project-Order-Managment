@model ProjectTeam
@{
    ViewData["Title"] = "Create Team";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}
<div class="container" style='padding:30px;'>
    <h1 class="text-info">Create team</h1>
    @if (!string.IsNullOrEmpty(ViewBag.message))
    {
        <h2 class="text-success">@ViewBag.message</h2>
    }
    <form asp-action="Create" asp-controller="Team" method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="@Model.PId">
        <div>
            <div class='form-group row'>
                <div class='col-2'>
                    <label asp-for="@Model.TeamName" class="col-lg-3 control-label"></label>
                </div>
                <div class='col-6'>
                    <input class='form-control' asp-for="@Model.TeamName">
                    <span class='text-danger' asp-validation-for="@Model.TeamName"></span>
                </div>
            </div>

            <div class='form-group row'>
                <div class='col-2.5'>
                    <button type="submit" class="btn btn-success">Create</button>
                </div>
                <div class='col-3'>
                    <a asp-action="Detail" asp-controller="Team" asp-route-id="@Model.Id"
                        class="btn btn-success">Cancel</a>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts{
<partial name="_ValidationScriptsPartial" />
}