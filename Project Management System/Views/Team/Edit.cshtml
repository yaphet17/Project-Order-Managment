@model ProjectTeam
@{
    ViewData["Title"] = "Edit Team Detail";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}
<div class='border container' style='padding:30px;' style='padding:30px;'>
    <form asp-action="Edit" asp-controller="Team" method="POST">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="@Model.Id">
        <div class="col-12 row">
            <h1 class="text-info flex-grow-1">Edit team detail</h1>
        </div>
        <div class='form-group row'>
            <div class='col-2'>
                <label asp-for="@Model.TeamName" class="font-weight-bold"></label>
            </div>
            <div class='col-6'>
                <input asp-for="@Model.TeamName" class="form-control">
                <span asp-validation-for="@Model.TeamName" class="text-danger"></span>
            </div>
        </div>
        <div class='form-group form-submit row'>
            <div class='col-2.5 btn-submit'>
                <button type="submit" class='btn btn-success'>Update</button>
            </div>
            <div class='col-3'>
                <a asp-action='Detail' asp-controller="Team" asp-route-id="@Model.Id" class='btn btn-success'>Done</a>
            </div>
        </div>
    </form>
</div>
