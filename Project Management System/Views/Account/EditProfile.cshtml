@model EditProfileViewModel
@{
    ViewData["Title"] = "Edit Profile";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}
<div class="container">
    <h1 class="text-info">Edit profile</h1>
    @Html.ValidationSummary()
    @if (!string.IsNullOrEmpty(ViewBag.message))
    {
        <p class="col-lg-3 text-danger">@ViewBag.message</p>
    }
    <div class="col-3">
        <a asp-action="ChangePassword" asp-controller="Account" asp-route-id="@Model.Id"
            class="btn btn-info btn-sm text-white">Change
            Password</a>
    </div>
    <form asp-action="EditProfile" asp-controller="Account" method="post">
        <div class="registerdiv">
            <div class="form-group col-sm-12">
                <input type="hidden" asp-for="@Model.Id">
                <label asp-for="@Model.FirstName" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    <input class='form-control' asp-for="@Model.FirstName">
                    <span class='text-danger' asp-validation-for="@Model.FirstName"></span>
                </div>
            </div>
            <div class="form-group col-sm-12">
                <label asp-for="@Model.LastName" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    <input class='form-control' asp-for="@Model.LastName">
                    <span class='text-danger' asp-validation-for="@Model.LastName"></span>
                </div>
            </div>


            <div class="form-group col-sm-12">
                <label asp-for="@Model.Email" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    <input type="email" class='form-control' asp-for="@Model.Email">
                    <span class='text-danger' asp-validation-for="@Model.Email"></span>
                </div>
            </div>

            <div class="form-group col-sm-12">
                <label asp-for="@Model.PhoneNumber" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    <input class='form-control' asp-for="@Model.PhoneNumber">
                    <span class='text-danger' asp-validation-for="@Model.PhoneNumber"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12 btn-submit">
                    <button type="submit" class="btn btn-success">Update</button>

                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts{
<partial name="_ValidationScriptsPartial" />
}