@model EditUserInfoViewModel
@{
    ViewData["Title"] = "Edit User Details";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}
<div class="container">
    <h1 class="text-info">Edit user details</h1>
    @Html.ValidationSummary()
    <div class="col-3">
        @if (!string.IsNullOrEmpty(ViewBag.message))
        {
            <p class=" text-success">@ViewBag.message</p>
        }
        <a asp-action="ResetPassword" asp-controller="Account" asp-route-id="@Model.Id"
            class="btn btn-info btn-sm text-white">Reset
            Password</a>
    </div>
    <form asp-action="EditUserInfo" asp-controller="Account" method="post">
        <div class="registerdiv">
            <div class="form-group col-sm-12">
                <label asp-for="@Model.FirstName" class="col-lg-3 control-label"></label>
                <div class="col-lg-9">
                    <input class='form-control' asp-for="@Model.FirstName">
                    <span class='text-danger' asp-validation-for="@Model.FirstName"></span>
                </div>
            </div>
            <div class="form-group col-sm-12">
                <label asp-for="@Model.LastName" class="col-lg-3 control-label"></label>
                <div class="col-lg-9">
                    <input class='form-control' asp-for="@Model.LastName">
                    <span class='text-danger' asp-validation-for="@Model.LastName"></span>
                </div>
            </div>


            <div class="form-group col-sm-12">
                <label asp-for="@Model.Email" class="col-lg-3 control-label"></label>
                <div class="col-lg-9">
                    <input type="email" class='form-control' asp-for="@Model.Email">
                    <span class='text-danger' asp-validation-for="@Model.Email"></span>
                </div>
            </div>

            <div class="form-group col-sm-12">
                <label asp-for="@Model.PhoneNumber" class="col-lg-3 control-label"></label>
                <div class="col-lg-9">
                    <input class='form-control' asp-for="@Model.PhoneNumber">
                    <span class='text-danger' asp-validation-for="@Model.PhoneNumber"></span>
                </div>
            </div>

            <div class="form-group col-sm-12">
                <label asp-for="@Model.Role" class="col-lg-3 control-label"></label>
                <div class="col-lg-9">
                    @Html.DropDownListFor(e => e.Role, new SelectList(Model.Roles,"Id","Name")
                    , new { @class = "form-control form-control-lg" })
                    <span asp-validation-for="@Model.Role"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class='col-2.5'>
                    <button type="submit" class="btn btn-success">Update</button>
                </div>
                <div class='col-3'>
                    <a asp-action="UsersList" asp-controller="Account" class="btn btn-success">Back To List</a>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts{
<partial name="_ValidationScriptsPartial" />
}