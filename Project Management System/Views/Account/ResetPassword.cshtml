@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}
<div class="container">
    <h1 class="text-info">Reset password</h1>
    <div class="col-sm-12">
        @if (!string.IsNullOrEmpty(ViewBag.message))
        {
                <p class="text-success">@ViewBag.message</p>
        }

    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form asp-action="ResetPassword" asp-controller="Account" method="POST">
        <input asp-for="@Model.Id" type="hidden">
        <div class="form-group col-sm-12">
            <label asp-for="@Model.NewPassword" class="col-lg-3 control-label"></label>
            <br>
            <div class="col-lg-9">
                <input type="password" class='form-control' asp-for="@Model.NewPassword">
                <span class='text-danger' asp-validation-for="@Model.NewPassword"></span>
            </div>
        </div>
        <div class="form-group col-sm-12">
            <label asp-for="@Model.ConfirmPassword" class="col-lg-3 control-label"></label>
            <br>
            <div class="col-lg-9">
                <input type="password" class='form-control' asp-for="@Model.ConfirmPassword">
                <span class='text-danger' asp-validation-for="@Model.ConfirmPassword"></span>
            </div>
        </div>
        <div class="form-group col-sm-12">
            <div class="btn-submit">
                <button type="submit" class="btn btn-success">Reset</button>
            </div>
        </div>
    </form>
</div>
