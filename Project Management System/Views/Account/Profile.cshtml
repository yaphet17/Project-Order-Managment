@model EditProfileViewModel
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}
<div class="container">
    <h1 class="text-info">Profile detail</h1>
    @Html.ValidationSummary()
    <div class="registerdiv">
        <div class="form-group col-sm-12">
            <label class="col-lg-3 control-label">@Model.FirstName @Model.LastName</label>
        </div>
        <div class="form-group col-sm-12">
            <label class="col-lg-3 control-label">@Model.Email</label>
        </div>
        <div class="form-group col-sm-12">
            <label class="col-lg-3 control-label">@Model.PhoneNumber</label>
        </div>
        <div class="form-group">
            <div class="col-sm-12 btn-submit">
                <a asp-action="EditProfile" asp-controller="Account" class="btn btn-success">Edit Profile</a>
                <a asp-action="ChangePassword" asp-controller="Account" class="btn btn-success">Change Password</a>
            </div>
        </div>
    </div>
</div>
@section Scripts{
<partial name="_ValidationScriptsPartial" />
}