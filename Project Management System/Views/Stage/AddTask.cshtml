@model List<AddStageTasksViewModel>
@{
    ViewData["Title"] = "Add stage task";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}
<div class="container row p-0 m-0" style='padding:30px;'>
    <div class="col-9">
        <h2 class="text-info">Select stage tasks</h2>
    </div>
    <div class="col-12 border p-3 mt-3">
        <form asp-action="AddTask" asp-controller="Stage" method="post">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            @if (Model.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>No.</th>
                        <th>
                            <label>Task Name</label>
                        </th>
                        <th>
                            <label>Start Date</label>
                        </th>
                        <th>
                            <label>End Date</label>
                        </th>
                    </tr>

                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        <tr>
                            <input type="hidden" asp-for="@Model[i].SId">
                            <input type="hidden" asp-for="@Model[i].TId">
                            <input type="hidden" asp-for="@Model[i].TaskName">
                            <input type="hidden" asp-for="@Model[i].StartDate">
                            <input type="hidden" asp-for="@Model[i].EndDate">
                            <td>
                                <input type="checkbox" asp-for="@Model[i].CheckboxAnswer">
                            </td>
                            <td>
                                @Model[i].TaskName
                            </td>
                            <td>
                                @Model[i].StartDate
                            </td>
                            <td>
                                @Model[i].EndDate
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No user found.</p>
            }
            <div class='form-group row'>
                <div class='col-2.5'>
                    <button type="submit" class="btn btn-primary">Select</button>
                </div>
                <div class='col-3'>
                    <a asp-action="Detail" asp-controller="Stage" class="btn btn-primary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
